{
  "name": "@escrin/worker",
  "version": "1.0.0-alpha.4",
  "license": "MIT",
  "keywords": [],
  "author": "Nick Hynes <nick@enshrine.ai>",
  "type": "module",
  "service": "./dist/service/escrin-runner.js",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "engines,": {
    "pnpm": ">=7"
  },
  "scripts": {
    "lint:prettier": "prettier --check --plugin-search-dir=. --cache '*.json' 'src/**/*.ts'",
    "lint": "npm-run-all lint:**",
    "format:prettier": "prettier --write --plugin-search-dir=. --cache '*.json' 'src/**/*.ts'",
    "format": "npm-run-all format:**",
    "build:typecheck": "tsc -b",
    "build:lib": "tsc -b",
    "build:runner": "esbuild --bundle ./src/service/runner.ts --outfile=./dist/service/escrin-runner.js --minify --target=es2022 --format=esm",
    "build:env": "esbuild --bundle ./src/service/env/index.ts --outfile=./dist/service/escrin-env.js --minify --target=es2022 --format=esm",
    "build": "npm-run-all --parallel build:**",
    "watch:build:lib": "tsc -b --watch --preserveWatchOutput",
    "watch:build:runner": "esbuild --bundle ./src/service/runner.ts --outfile=./dist/service/escrin-runner.js --minify --target=es2022 --format=esm --watch",
    "watch:build:env": "esbuild --bundle ./src/service/env/index.ts --outfile=./dist/service/escrin-env.js --minify --target=es2022 --format=esm --watch",
    "watch:build": "npm-run-all --parallel watch:build:**",
    "watch": "npm-run-all --parallel watch:**"
  },
  "dependencies": {
    "@escrin/evm": "workspace:^",
    "@oasisprotocol/sapphire-paratime": "file:oasisprotocol-sapphire-paratime-1.1.1.tgz",
    "viem": "^1.10.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230904.0",
    "@types/node": "^20.5.9",
    "esbuild": "^0.19.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2"
  }
}
