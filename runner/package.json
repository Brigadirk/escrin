{
  "name": "@escrin/worker",
  "version": "1.0.0-alpha.1",
  "license": "MIT",
  "keywords": [],
  "author": "Nick Hynes <nick@enshrine.ai>",
  "type": "module",
  "service": "./dist/service/escrin-runner.js",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "engines,": {
    "pnpm": ">=7"
  },
  "scripts": {
    "lint:prettier": "prettier --check --plugin-search-dir=. --cache '*.json' 'src/**/*.ts'",
    "lint": "npm-run-all lint:**",
    "format:prettier": "prettier --write --plugin-search-dir=. --cache '*.json' 'src/**/*.ts'",
    "format": "npm-run-all format:**",
    "build:typecheck": "tsc -b",
    "build:lib": "tsc -b",
    "build:runner": "esbuild --bundle ./src/service/runner.ts --outfile=./dist/service/escrin-runner.js --minify --target=es2022 --format=esm",
    "build:env": "esbuild --bundle ./src/service/env.ts --outfile=./dist/service/escrin-env.js --minify --target=es2022 --format=esm",
    "build": "npm-run-all --parallel build:**",
    "watch:build:lib": "tsc -b --watch --preserveWatchOutput",
    "watch:build:runner": "esbuild --bundle ./src/service/runner.ts --outfile=./dist/service/escrin-runner.js --minify --target=es2022 --format=esm --watch",
    "watch:build:env": "esbuild --bundle ./src/service/env.ts --outfile=./dist/service/escrin-en.js --minify --target=es2022 --format=esm --watch",
    "watch:build": "npm-run-all --parallel watch:build:**",
    "watch": "npm-run-all --parallel watch:**"
  },
  "dependencies": {
    "@babel/generator": "^7.22.9",
    "@babel/parser": "^7.22.7",
    "@escrin/evm": "link:../evm",
    "@noble/hashes": "^1.3.1",
    "@oasisprotocol/sapphire-paratime": "file:../oasisprotocol-sapphire-paratime-1.1.0.tgz",
    "ethers": "^6.6.4",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230717.0",
    "@types/babel__generator": "^7.6.4",
    "@types/node": "^20.4.2",
    "@types/ws": "^8.5.5",
    "esbuild": "^0.18.14",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.6"
  }
}
