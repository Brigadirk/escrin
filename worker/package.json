{
  "name": "@escrin/worker",
  "version": "1.0.0-alpha.4",
  "license": "MIT",
  "keywords": [
    "web3",
    "web4",
    "tee",
    "worker",
    "escrin-runner"
  ],
  "author": "Nick Hynes <nick@escrin.org>",
  "type": "module",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "engines,": {
    "pnpm": ">=7"
  },
  "scripts": {
    "lint:prettier": "prettier --check --plugin-search-dir=. --cache '*.json' '{src,test}/**/*.ts' '*.js'",
    "lint": "npm-run-all lint:**",
    "format:prettier": "prettier --write --plugin-search-dir=. --cache '*.json' '{src,test}/**/*.ts' '*.js'",
    "format": "npm-run-all format:**",
    "build:typecheck": "tsc -b",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:env": "node esbuild.js",
    "build": "npm-run-all --parallel build:**",
    "watch:typecheck": "tsc -b --watch --preserveWatchOutput",
    "watch:build:lib": "tsc -p tsconfig.lib.json --watch --preserveWatchOutput",
    "watch:build:env": "node esbuild.js --watch",
    "watch:build": "npm-run-all --parallel watch:build:**"
  },
  "dependencies": {
    "@escrin/evm": "workspace:^",
    "@oasisprotocol/sapphire-paratime": "file:oasisprotocol-sapphire-paratime-1.1.1.tgz",
    "@openzeppelin/merkle-tree": "^1.0.5",
    "cborg": "^4.0.5",
    "ethereum-cryptography": "^2.1.2",
    "viem": "^1.19.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231121.0",
    "@types/node": "^20.10.3",
    "esbuild": "^0.19.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.2"
  }
}
