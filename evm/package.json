{
  "name": "@escrin/evm",
  "version": "1.0.0-beta.5",
  "license": "MIT",
  "type": "module",
  "keywords": [],
  "author": "Nick Hynes <nick@enshrine.ai>",
  "module": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "files": [
    "contracts",
    "lib/src",
    "lib/typechain-types",
    "src",
    "typechain-types"
  ],
  "scripts": {
    "lint:prettier": "prettier --check --plugin=prettier-plugin-solidity --cache '*.json' '{contracts,test}/**/*.sol'",
    "lint:solhint": "solhint '{contracts,test}/**/*.sol'",
    "lint": "npm-run-all lint:**",
    "format:prettier": "prettier --write  --plugin=prettier-plugin-solidity --cache '*.json' '{contracts,test}/**/*.sol'",
    "format:solhint": "solhint --fix '{contracts,test}/**/*.sol'",
    "format": "npm-run-all format:**",
    "build:contracts": "forge compile --ignored-error-codes=5667",
    "build:lib": "tsc -p tsconfig.json",
    "build": "npm-run-all build:contracts build:lib",
    "test": "forge test",
    "watch:build:contracts": "forge compile --ignored-error-codes=5667 --watch",
    "watch:build:lib": "tsc -p tsconfig.json --watch --preserveWatchOutput",
    "watch:build": "npm-run-all --parallel 'watch:build:**'",
    "watch:test": "forge test --watch",
    "watch": "npm-run-all --parallel 'watch:**'",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-verify": "^1.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@oasisprotocol/sapphire-hardhat": "^2.16.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.8",
    "chai": "^4.3.7",
    "ethers": "^6.7.0",
    "hardhat": "^2.17.1",
    "hardhat-deploy": "^0.11.34",
    "hardhat-deploy-ethers": "0.4.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-watcher": "^2.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.5.1",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "~5.1.6"
  },
  "dependencies": {
    "@oasisprotocol/sapphire-contracts": "^0.2.4",
    "@openzeppelin/contracts": "^4.9.3"
  }
}
